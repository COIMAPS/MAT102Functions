                  \draw[line width=0.75mm, domain=-3.65:4.09,smooth,variable=\x,red] plot ({\x},{2/7*\x*\x*\x-\x*\x/7-3*\x});
                  \node at (-3.5,3.5) {\Large $h(x)=\frac{2}{7}x^3-\frac{1}{7}x^2-3x$};
                  \fill (-3,0) circle (.1cm);
