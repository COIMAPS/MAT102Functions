                  \draw[line width=0.55mm,black] (3pt,-4 cm) -- (-3pt,-4 cm);
                  \draw[line width=0.55mm,black] (3pt,-8 cm) -- (-3pt,-8 cm);
                  \node at (-4,-.2) {$-4$};
                  \node at (4,-.2) {$4$};
                  \node at (-.2,-.2) {$0$};
                  \node at (-.35,-3.95) {$-4$};
                  \node at (-.35,-7.95) {$-8$};
                  \draw[line width=0.75mm, domain=-1.12:2.8,smooth,variable=\x,red] plot ({\x},{\x*\x*\x*\x-2*\x*\x*\x-2*\x*\x});
                  \node at (-3.5,-6.5) {\Large $k(x)=x^4-2x^3-2x^2$};
                  \fill (-.732,0) circle (.1cm);
                  \fill (0,0) circle (.1cm);
